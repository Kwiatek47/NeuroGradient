{
  "manifest_version": 3,
  "name": "NeuroGradient - Blokada Stron",
  "version": "1.0.0",
  "description": "Blokuje wybrane strony podczas sesji skupienia",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

